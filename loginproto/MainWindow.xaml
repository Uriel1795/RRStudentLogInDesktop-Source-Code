<Window x:Class="loginproto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:loginproto"
        mc:Ignorable="d"
        Title="Log In" Height="250" Width="275"
        Icon="/loginproto;component/Resources/Images/logo.ico"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow" ResizeMode="CanMinimize">
    <Grid x:Name="logInWindow" ShowGridLines="False">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="175"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Label Content="First Name" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" FontSize="16"/>

        <TextBox x:Name="fTxtB" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" Width="136" FontSize="16" MaxLines="1" MaxLength="15"/>
        <Label Content="Last Name" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0" FontSize="16"/>
        <TextBox x:Name="lTxtB" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Grid.Row="2" Grid.Column="2" Width="136" FontSize="16" MaxLines="1" MaxLength="15"/>
        <Button Content="Log In" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" FontSize="16" Margin="15,0,0,0" Click="Button_Click"/>
        <Image Margin="44,10,43,10" Source="/Resources/Images/logo.png" Stretch="Fill" Grid.ColumnSpan="2" RenderTransformOrigin="0.5,-0.612"/>
    </Grid>
</Window>
