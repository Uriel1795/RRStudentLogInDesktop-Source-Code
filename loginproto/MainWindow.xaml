<Window x:Class="loginproto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Log In"
        Height="390"
        Width="400"
        Icon="/loginproto;component/Resources/Images/logo.ico"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFF">

    <DockPanel>

        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top" Background="#FAFAFA">
            <!-- File Menu -->
            <MenuItem Header="File" FontSize="17">
                <!-- Update Option -->
                <MenuItem x:Name="UpdateTab"
                          Background="#FAFAFA"
                          Header="Update"
                          Click="updateTab_Click"/>

                <!-- About Option -->
                <MenuItem Header="About"
                          Background="#FAFAFA"
                          Click="aboutButton_Click" />
            </MenuItem>
        </Menu>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Background="White"
                CornerRadius="10" Grid.ColumnSpan="2">

                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="1.8*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0 0 0 0" Orientation="Horizontal">
                        <Ellipse x:Name="ConnectionStatusEllipse" Width="15" Height="15" Fill="Red"/>
                        <Label x:Name="ConnectionStatusLabel" Content="Not Connected" Margin="0,0,0,0"/>
                    </StackPanel>

                    <!-- Logo -->
                    <Image Source="/Resources/Images/logo.png"
                       Grid.Row="1"
                       Grid.ColumnSpan="2"
                       Margin="30,0,0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Height="60" />

                    <!-- Input Fields -->
                    <Label Content="First Name:"
                       Grid.Row="2"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       FontSize="20"
                       Margin="0,0,0,0"/>

                    <TextBox x:Name="fTxtB"
                         Grid.Row="2"
                         Grid.Column="1"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Center"
                         Margin="0,0,0,0"
                         Width="150"
                         MaxLength="12"
                         FontSize="20"
                         KeyDown="TextBox_KeyDown"/>

                    <Label Content="Last Name:"
                       Grid.Row="3"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Margin="0, 0, 0,0"
                       FontSize="20"/>
                    
                    <TextBox x:Name="lTxtB"
                         Grid.Row="3"
                         Grid.Column="1"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Center"
                         Margin="0,0,0,0"
                         Width="150"
                         MaxLength="12"
                         FontSize="20"
                         KeyDown="TextBox_KeyDown"/>

                    <!-- Login Button -->
                    <Button Content="Log In"
                        Grid.Row="4"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Margin="0,0,0,0"
                        Padding="10,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="#007ACC"
                        Foreground="White"
                        BorderBrush="{x:Null}"
                        FontWeight="Bold"
                        Height="40"
                        FontSize="20"
                        Click="logInButton_Click"/>
                </Grid>
            </Border>
        </Grid>
    </DockPanel>
</Window>
