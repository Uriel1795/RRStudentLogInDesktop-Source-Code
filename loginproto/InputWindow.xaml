<Window x:Class="loginproto.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:loginproto"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow" ResizeMode="CanMinimize"
        Icon="/Resources/Images/logo.ico"
        Title="Admin Password" Height="170" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Content="Admin Password?" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" FontSize="16"/>
        <TextBox x:Name="inputTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Grid.Row="1" FontSize="16"/>
        <Button Content="Cancel" Height="30" Width="75" Click="Cancel_Click" HorizontalAlignment="Left" Grid.Row="2" Margin="140,20,0,50" FontSize="16"/>
        <Button Content="OK" Height="30" Width="74" Click="OK_Click" HorizontalAlignment="Left" Grid.Row="2" Margin="25,20,0,50" FontSize="16"/>
    </Grid>
</Window>
