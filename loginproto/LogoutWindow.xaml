<Window x:Class="loginproto.LogoutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:loginproto"
        mc:Ignorable="d"
        Title="LogoutWindow" Height="150" Width="180"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow" ResizeMode="CanMinimize">
    <Grid>
        <StackPanel Margin="10,10,10,14">
            <TextBlock Text="You will be logged out in:" HorizontalAlignment="Center"/>
            <TextBlock x:Name="countdownText" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
            <Button Content="Logout Now" Width="100" Margin="0 20" HorizontalAlignment="Center" Click="LogoutButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
